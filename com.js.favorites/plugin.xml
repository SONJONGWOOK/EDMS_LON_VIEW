<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="FavoritesCategory"
            id="com.js.favorites">
      </category>
      <view
            id="com.js.favorites.views.FavoritesView"
            name="Favorites"
            icon="icons/sample.png"
            class="com.js.favorites.views.FavoritesView"
            category="com.js.favorites"
            inject="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="com.js.favorites.workBenchActionSet"
            label="Favorites ActionSet"
            visible="true">
         <menu
               id="com.js.favorites.workBenchMenu"
               label="fa&amp;vorites Label"
               path="additions">
            <groupMarker
                  name="content">
            </groupMarker>
            <separator
                  name="additions">
            </separator>
         </menu>
         <action
               class="com.js.favorites.actions.OpenFavoritesViewActionDelegate"
               icon="icons/sample.png"
               id="com.js.favorites.openFavoritesView"
               label="Open Favo&amp;rites View"
               menubarPath="com.js.favorites.workBenchMenu/content"
               style="push"
               toolbarPath="additions"
               tooltip="toolbar Favorite View">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="com.js.favorites.popupMenu"
            objectClass="org.eclipse.core.resources.IResource">
         <action
               class="com.js.favorites.actions.AddToFavoritesActionDelegate"
               enablesFor="+"
               icon="icons/sample.png"
               id="com.js.favorites.addToFavorites"
               label="Add"
               menubarPath="com.js.favorites.popupSubmenu/content"
               tooltip="add to Favorites">
         </action>
         <menu
               id="com.js.favorites.popupSubmenu"
               label="Favorites"
               path="additions">
            <groupMarker
                  name="content">
            </groupMarker>
            <separator
                  name="additions">
            </separator>
         </menu>
      </objectContribution>
      <viewerContribution
            id="com.js.favorites.membersViewPopup"
            targetID="org.eclipse.jdt.ui.MembersView">
         <menu
               id="com.js.favorites.membersViewPopupSubmenu"
               label="Favorites"
               path="additions">
            <groupMarker
                  name="content">
            </groupMarker>
            <separator
                  name="additions">
            </separator>
         </menu>
         <action
               class="com.js.favorites.actions.AddToFavoritesActionDelegate"
               id="com.js.favorites.addToFavoritesInMembersView"
               label="Add"
               menubarPath="com.js.favorites.membersViewPopupSubmenu/content"
               tooltip="Add in members">
         </action>
      </viewerContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="com.js.favorites.compilationUnitEditorActions"
            targetID="org.eclipse.jdt.ui.CompilationUnitEditor">
      </editorContribution>
   </extension>

</plugin>
